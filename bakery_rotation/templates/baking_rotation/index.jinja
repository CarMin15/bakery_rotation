{% extends "baking_rotation/base.jinja" %}
{% load static %}

{% block content %}

  <div class="row my-3 border upcoming-items">
    <div class="col-3 upcoming-items_title">
      <img src="{% static 'baking_rotation/images/platterguy.png' %}" class="platter_img" />
      <span>Hey good lookin' whatcha got cookin'</span>
    </div>
    <div class="col-1 py-3 line-separator"></div>
    <div class="col-2">
    <div>{{ upcoming0 }}</div>
    </div>
    <div class="col-1 line-separator"></div>
    <div class="col-2">some text</div>
    <div class="col-1 line-separator"></div>
    <div class="col-2">some text</div>
  </div>
  <div class="row">
    <div class="col-12">
      <h3 class="subtitle text-center">Delicious Baked Good You Already Had!</h3>
    </div>
      {% for item in items %}
        {% if item.image %}
          <div class="col-3 my-2">
            <a class="grid-item-box" href="/bakery_rotation/details/{{ item.id }}">
              <div class="grid-item">
                <img src="{{ item.image.url }}" class="img-item">
                <div class="grid-item-description">
                  <div class="grid-item-title">
                    <span>{{ item.item | title }}</span>
                  </div>
                  <div class="pt-1">
                    <span class="grid-item-date">{{ item.timesince }}</span>
                  </div>
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endblock %}
