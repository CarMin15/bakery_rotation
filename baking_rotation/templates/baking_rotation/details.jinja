{% extends "baking_rotation/base.jinja" %}
{% load static %}

{% block content %}

<div class="item-details">
  <div class="text-center py-3">
    <h3>{{ item.item | title }}</h3>
  </div>
  <div class="row">
    <div class="col-6">
      <div>
        {% if item.image %}
          <img src="{{ item.image.url }}" class="img-item">
        {% else %}
          <img src="{% static 'baking_rotation/images/cupcake.png' %}" class="img-default-item">
        {% endif %}
      </div>
    </div>
    <div class="col-6">
      <div class="item-details-description card-generic p-2">{{ item.description }}</div>
      <div class="item-details-allergens card-generic p-2">
        Here are the allergens
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <span class="grid-item-date item-date">{{ item.date }}</span>
    </div>
  </div>
</div>

{% endblock %}
